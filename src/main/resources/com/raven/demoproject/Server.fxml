<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="com.raven.demoproject.ServerController" xmlns:fx="http://javafx.com/fxml">
    <Label text="Server Application" layoutX="10.0" layoutY="10.0" style="-fx-font-size: 18px;"/>
    <Button text="Start Server" layoutX="10.0" layoutY="40.0" onAction="#startServer"/>
    <ListView fx:id="clientList" layoutX="10.0" layoutY="80.0" prefHeight="100.0" prefWidth="280.0"/>
    <TextArea fx:id="serverMessageField" layoutX="10.0" layoutY="190.0" prefHeight="100.0" prefWidth="280.0" promptText="Enter message to client"/>
    <Button text="Send to Client" layoutX="10.0" layoutY="300.0" onAction="#sendMessage"/>
    <TextArea fx:id="messageArea" layoutX="10.0" layoutY="340.0" prefHeight="150.0" prefWidth="280.0" editable="false"/>
</AnchorPane>
